<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lianying.shangjialian.dal.mapper.industry.IndustryMapper">

    <resultMap id="industryResultMap" type="com.lianying.shangjialian.model.dataobject.industry.IndustryDO">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="parent_id" property="parentId" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="deleted_at" property="deletedAt" />
    </resultMap>

    <sql id="query">
        <trim prefix=" where " suffixOverrides="AND | OR" >
            <if test="id != null" >
                id = #{id} and
            </if>
            <if test="name != null">
                name like %#{name}% and
            </if>
            <if test="parentId != null">
                parent_id = #{parentId} and
            </if>
        </trim>
    </sql>

    <select id="queryById" resultMap="industryResultMap">
        SELECT * FROM bizman_industry where id = #{id}
    </select>

    <select id="queryByPage" resultMap="industryResultMap">
        SELECT * from bizman_industry
        <include refid="com.lianying.shangjialian.dal.mapper.BaseMapper.orderByConditions" />
        <include refid="com.lianying.shangjialian.dal.mapper.BaseMapper.pagination" />
    </select>

    <select id="count" resultType="java.lang.Integer">
        SELECT count(id) from bizman_industry
    </select>
</mapper>
